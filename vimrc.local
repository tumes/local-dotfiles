set clipboard=unnamed
colors zenburn
set t_Co=256

let mapleader = ","
nnoremap j gj
nnoremap k gk
inoremap jj <ESC>
inoremap jk <ESC>

map <F2> :NERDTreeToggle<cr>
let NERDSpaceDelims=1

" Searching
set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch
set gdefault

" Block movement
nmap <tab> %
vmap <tab> %

set nowrap
set clipboard=unnamed
